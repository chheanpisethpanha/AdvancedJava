<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
<!--Filter Instantiation-->
    <filter>
        <filter-name>Filter1</filter-name>
        <filter-class>Filter1</filter-class>
    </filter>
    <filter>
        <filter-name>Filter2</filter-name>
        <filter-class>Filter2</filter-class>
    </filter>
    
<!--Filter Mapping-->
    <filter-mapping>
        <filter-name>Filter1</filter-name>
        <url-pattern>/*</url-pattern>
        
<!-- for all servlet use '/*' -->
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
<!--Servlet Instantiation-->
    <servlet>
        <servlet-name>InitServ</servlet-name>
        <servlet-class>InitServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SucessServ</servlet-name>
        <servlet-class>SucessServ</servlet-class>
    </servlet>
    
<!--Servlet Mapping-->
    <servlet-mapping>
        <servlet-name>InitServ</servlet-name>
        <url-pattern>/InitServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SucessServ</servlet-name>
        <url-pattern>/SucessServ</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
